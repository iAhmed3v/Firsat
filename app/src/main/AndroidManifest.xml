<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ahmed3v.firsat">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/firsat_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/firsat_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Firsat">

        <activity android:name=".activities.DevInfoActivity"
            android:theme="@style/Theme.Firsat.NoActionBar">
        </activity>

        <activity android:name=".activities.AppInfoActivity"
            android:theme="@style/Theme.Firsat.NoActionBar"/>

        <activity android:name=".activities.TermsActivity"
            android:theme="@style/Theme.Firsat.NoActionBar"/>

        <activity
            android:name=".activities.SplashScreen"
            android:theme="@style/Theme.Firsat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/Theme.Firsat.NoActionBar" />

    </application>

</manifest>